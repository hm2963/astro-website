---
import Layout from '~/layouts/PageLayout.astro';

import heroSlideImage from '~/assets/images/prplbx_images/page_home/animation-11-1-1.svg';
import HeroCarousel from '~/components/widgets/HeroCarousel.astro';
// import Note from '~/components/widgets/Note.astro'; // Not used yet
import Features from '~/components/widgets/Features.astro';
// import Features2 from '~/components/widgets/Features2.astro'; // Not used yet
// import Steps from '~/components/widgets/Steps.astro'; // Not used yet
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro'; // Not used yet
// import CallToAction from '~/components/widgets/CallToAction.astro'; // Not used yet

const metadata = {
  title: 'Cybersecurity and Cloud Solutions Unique to Your Needs - PurpleBox',
  description: 'Cybersecurity and cloud solutions. Elevate your business with our approach to digital security and cloud optimization.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  {/* Hero Carousel Widget ******************* */}
  <HeroCarousel
    slides={[
      {
        title: 'Manage Risk for',
        titleHighlight: 'Your Business',
        subtitle: 'SECURITY - CLOUD - DEVOPS',
        buttonText: 'SECURITY SERVICES',
        buttonHref: '/security/',
        imageSrc: heroSlideImage,
        imageAlt: 'Manage Risk for Your Business',
      },
      {
        title: 'Cloud Security That Drives',
        titleHighlight: 'Business Growth',
        subtitle: 'SECURITY - CLOUD - DEVOPS',
        buttonText: 'CLOUD SERVICES',
        buttonHref: '/cloud/',
        imageSrc: heroSlideImage,
        imageAlt: 'Cloud Security That Drives Business Growth',
      },
    ]}
  />

  {/* Features Widget: Why PurpleBox Security? */}
  <Features
    id="why-purplebox"
    tagline="Why PurpleBox Security?"
    title="Cybersecurity and Cloud Solutions Tailored to Your Needs"
    subtitle="PurpleBox helps you empower your team with integrated cybersecurity solutions, seamlessly working together to detect, protect against, respond to, and recover from cyberattacks."
    items={[
      {
        title: 'Penetration Testing',
        description: 'Recognize the Risks and Consequences of System Vulnerabilities',
        icon: 'tabler:shield-check', 
      },
      {
        title: 'Vulnerability Management',
        description: 'Detect and defend against threats in real time, anywhere and everywhere',
        icon: 'tabler:shield-search', 
      },
      {
        title: 'Cloud Security',
        description: 'Elevate security in the cloud and raise your security posture',
        icon: 'tabler:cloud-lock', 
      },
      {
        title: 'Web App Firewall',
        description: 'Protect web apps from attacks without changes to your infrastructure',
        icon: 'tabler:shield-lock', 
      },
      {
        title: 'Endpoint Security',
        description: 'Block ransomware attacks effectively before they happen',
        icon: 'tabler:device-laptop', 
      },
      {
        title: 'Risk and Compliance',
        description: 'Ensure your InfoSec program is aligned with regulations and compliance mandates',
        icon: 'tabler:file-check', 
      },
    ]}
  />

  {/* Advanced Cloud Solutions Section */}
  <section class="py-10 md:py-16 bg-slate-50 dark:bg-slate-800">
    <div class="px-4 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
      <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
        <h2 class="max-w-lg mb-6 font-sans text-2xl font-semibold leading-none tracking-tight text-gray-700 sm:text-3xl md:mx-auto dark:text-slate-300 uppercase">
          Advanced Cloud Solutions for your Business
        </h2>
      </div>

      <Content
        isReversed={false} 
        image={{
          src: '~/assets/images/prplbx_images/page_home/Group-427319260Cloud-Services.svg',
          alt: 'Advanced Cloud Solutions',
        }}
      >
        <Fragment slot="content">
          <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-4">
            Advancing Digital Evolution: Tailored Cloud Solutions for Future-Ready Businesses
          </h3>
          <FAQs
            items={[
              {
                title: 'Cloud Migration',
                description: 'Elevate Your Business to the Cloud. Seamless Migration and Integration Solutions Tailored for Your Success. <a href="/cloud/migration/" class="text-primary-600 dark:text-primary-400 hover:underline">Learn more...</a>',
              },
              {
                title: 'Cloud Architecture and Optimization',
                description: 'Optimize Your Digital Horizon: Advanced Cloud Architecture and Optimization Solutions Customized for Peak Performance and Reduced Costs. <a href="/cloud/architecture/" class="text-primary-600 dark:text-primary-400 hover:underline">Learn more...</a>',
              },
              {
                title: 'DevOps',
                description: 'Your gateway to faster, more efficient software development and operations. <a href="/cloud/devops/" class="text-primary-600 dark:text-primary-400 hover:underline">Learn more...</a>',
              },
              {
                title: 'Data, Analytics, AI & ML',
                description: 'Empowering Transformation Through Data: Innovate, Optimize, and Excel with PurpleBox’s Expert Analytics and AI Solutions. <a href="/cloud/analytics/" class="text-primary-600 dark:text-primary-400 hover:underline">Learn more...</a>',
              },
              {
                title: 'Application Development & Modernization',
                description: 'Unlock the full potential of your applications through transformative application development and modernization solutions. <a href="/cloud/application-development-modernization/" class="text-primary-600 dark:text-primary-400 hover:underline">Learn more...</a>',
              },
              {
                title: 'Operations, Reliability & Performance',
                description: 'Elevating your Cloud with Operations, Reliability & Performance: Where Expertise Meets Innovation. <a href="/cloud/ops/" class="text-primary-600 dark:text-primary-400 hover:underline">Learn more...</a>',
              },
            ]}
            classes={{ 
              container: 'w-full',
              list: '', 
              item: '',   
              question: '', 
              answer: 'prose prose-sm sm:prose dark:prose-invert max-w-none',
            }}
          />
        </Fragment>
        {/* No slot="bg" for this Content widget as the parent section handles background */}
      </Content>
    </div>
  </section>

  {/* Manage Risk Section */}
  <section class="py-16 md:py-20 bg-gray-800 dark:bg-gray-900 text-white">
    <div class="px-4 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
      <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
        <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight sm:text-4xl md:mx-auto">
          Manage Risk for Your Business and Grow in the Cloud
        </h2>
      </div>
      <Features
        columns={3}
        items={[
          {
            title: 'We Plan',
            description: 'We form a strategy to overcome your business pain points and optimize your strengths',
            icon: 'tabler:map-pin', 
          },
          {
            title: 'We Build',
            description: 'We work with our team of experts to build, test and integrate the right solution based on your business needs',
            icon: 'tabler:tools', 
          },
          {
            title: 'We Run It',
            description: 'We give transition support through strategic guidance and provide post delivery support',
            icon: 'tabler:player-play', 
          },
        ]}
        classes={{ 
          container: 'max-w-6xl mx-auto md:px-4',
          title: 'text-center text-3xl md:text-4xl font-bold mb-4 text-white', 
          subtitle: 'text-center text-xl text-gray-300 mb-12', 
          grid: 'grid md:grid-cols-3 gap-8',
          column: 'text-center', 
          icon: 'w-16 h-16 mx-auto mb-4 text-primary-500', 
          itemTitle: 'text-xl font-bold mb-2 text-white', 
          description: 'text-gray-300', 
        }}
      />
    </div>
  </section>

  {/* How We've Made a Difference Section */}
  <section class="py-16 md:py-20 bg-white dark:bg-slate-900">
    <div class="px-4 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
      <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
        <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl md:mx-auto dark:text-white">
          How We've Made a Difference
        </h2>
      </div>
      <div class="grid gap-8 md:grid-cols-3">
        <div class="p-5 duration-300 transform bg-slate-50 dark:bg-slate-800 border rounded shadow-sm hover:-translate-y-2">
          <h3 class="mb-2 text-lg font-semibold leading-5 text-gray-900 dark:text-white">Leading HealthTech Firm</h3>
          <p class="text-sm text-gray-700 dark:text-slate-400">
            “…compared to the competitors, the level of service was far and above.”
          </p>
        </div>
        <div class="p-5 duration-300 transform bg-slate-50 dark:bg-slate-800 border rounded shadow-sm hover:-translate-y-2">
          <h3 class="mb-2 text-lg font-semibold leading-5 text-gray-900 dark:text-white">Top Recycling Company</h3>
          <p class="text-sm text-gray-700 dark:text-slate-400">
            “…they do have a good relationship with all the developers and all the different teams and again going back to they are helping they are partners, they're part of the solution and their involvement shows”
          </p>
        </div>
        <div class="p-5 duration-300 transform bg-slate-50 dark:bg-slate-800 border rounded shadow-sm hover:-translate-y-2">
          <h3 class="mb-2 text-lg font-semibold leading-5 text-gray-900 dark:text-white">Leading HealthTech Company</h3>
          <p class="text-sm text-gray-700 dark:text-slate-400">
            “…it was really the meetings the level of comfort the willingness for your team to understand our environment and the idiosyncrasies of our applications that just the level of detail was very very comforting and helped make that the process flow.”
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* Trusted Partners Section */}
  <section class="py-16 md:py-20 bg-slate-50 dark:bg-slate-800">
    <div class="px-4 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
      <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
        <h2 class="max-w-lg mb-6 font-sans text-2xl font-semibold leading-none tracking-tight text-gray-700 sm:text-3xl md:mx-auto dark:text-slate-300 uppercase">
          Trusted Partners
        </h2>
      </div>
      <div class="flex flex-col items-center">
        <img 
          src="/assets/images/prplbx_images/page_home/logos.png" 
          alt="Trusted Partner Logos" 
          class="mb-8 max-w-full h-auto md:max-w-3xl" 
          loading="lazy"
        />
        <img 
          src="/assets/images/prplbx_images/page_home/well-architected-advanced-1.png" 
          alt="AWS Well-Architected Partner Advanced Tier Services" 
          class="max-w-xs h-auto" 
          loading="lazy"
        />
      </div>
    </div>
  </section>

  {/* Blog Latest Posts Section */}
  <BlogLatestPosts
    title="Curious to learn more? Visit our blog!"
    information=""
    linkText="Our blog"
    linkUrl="/blog"
    count={3}
  />

  {/* Overcome Security Challenges Section */}
  <section class="py-16 md:py-24 text-white bg-[radial-gradient(circle_at_left_top,rgb(50,17,121)_9%,rgb(22,14,43)_72%)] overflow-hidden">
    <div class="px-4 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
      <div class="grid lg:grid-cols-3 items-center gap-8">
        {/* Left Image */}
        <div class="hidden lg:block">
          <img 
            src="/assets/images/prplbx_images/page_home/footer-left.webp" 
            alt="Decorative graphic" 
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
        
        {/* Center Content */}
        <div class="text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Overcome Your Security Challenges
          </h2>
          <p class="text-lg md:text-xl mb-8 text-slate-300">
            We offer 360° Security protection for your business with our trusted experts in cybersecurity.
          </p>
          <a
            href="/get-in-touch/" 
            class="btn btn-primary bg-white text-purple-700 hover:bg-gray-200 px-8 py-3 text-lg font-semibold rounded-md"
          >
            TALK TO AN EXPERT
          </a>
        </div>

        {/* Right Image */}
        <div class="hidden lg:block">
          <img 
            src="/assets/images/prplbx_images/page_home/footer-right.webp" 
            alt="Decorative graphic" 
            class="w-full h-auto" 
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  {/* Additional sections will be added here based on old_page_home.html and screenshots */}
</Layout>
