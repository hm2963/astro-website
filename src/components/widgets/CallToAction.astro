---
import type { CallToAction as Props } from '~/types';
import footerLeftImage from '~/assets/images/prplbx_images/page_home/footer-left.webp';
import footerRightImage from '~/assets/images/prplbx_images/page_home/footer-right.webp';

const {
  title = 'Overcome Your Security Challenges',
  subtitle = 'We offer 360Â° Security protection for your business with our trusted experts in cybersecurity.',
  callToAction = {
    text: 'TALK TO AN EXPERT',
    href: '/get-in-touch',
    type: 'button',
  },
  imageLeft = footerLeftImage,
  imageRight = footerRightImage,
} = Astro.props;
---

<section class="text-white bg-[radial-gradient(circle_at_left_top,rgb(50,17,121)_9%,rgb(22,14,43)_72%)] overflow-hidden h-[513px] flex items-center">
  <div class="w-full grid grid-cols-1 lg:grid-cols-[1fr_auto_1fr] items-center gap-4 lg:gap-6">
    <!-- Left Image -->
    <div class="hidden lg:flex justify-end">
      <img
        src={imageLeft.src}
        alt="Decorative graphic left"
        class="w-full h-auto max-w-2xl"
        loading="lazy"
      />
    </div>

    <!-- Center Content -->
    <div class="text-center px-4 lg:px-0 max-w-lg mx-auto">
      {title && <h2 class="text-3xl md:text-4xl font-bold mb-2">{title}</h2>}
      {subtitle && <p class="text-lg md:text-xl mb-6 text-slate-300">{subtitle}</p>}
      {callToAction && (
        <a
          href={callToAction.href}
          class="btn btn-primary bg-white text-purple-700 hover:bg-gray-200 px-6 py-2.5 text-base font-semibold rounded-md focus:outline-none focus:ring-0"
          role={callToAction.type === 'button' ? 'button' : undefined}
        >
          {callToAction.text}
        </a>
      )}
    </div>

    <!-- Right Image -->
    <div class="hidden lg:flex justify-start">
      <img
        src={imageRight.src}
        alt="Decorative graphic right"
        class="w-full h-auto max-w-2xl"
        loading="lazy"
      />
    </div>
  </div>
</section>
